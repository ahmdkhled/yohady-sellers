<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <ImageView
        android:id="@+id/order_item_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        tools:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/order_item_name"
        app:layout_constraintStart_toEndOf="@+id/order_item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/order_item_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="iphone 7 plus"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="18dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/order_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000 $"
        app:layout_constraintTop_toBottomOf="@id/order_item_name"
        app:layout_constraintStart_toStartOf="@id/order_item_name"
        android:layout_marginTop="2dp"
        android:textSize="18dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/order_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/order_item_price"
        app:layout_constraintStart_toStartOf="@id/order_item_name"
        android:textSize="18dp"
        android:textColor="#000"
        />

</android.support.constraint.ConstraintLayout>